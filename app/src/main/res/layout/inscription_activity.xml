<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InscriptionActivity"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="248dp"
        android:layout_height="59dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/logo" />


    <EditText
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:text="Login"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        app:errorEnabled="true"
        android:inputType="textEmailAddress"
        android:hint="Entrez votre Login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_login"
            android:layout_width="250dp"
            android:layout_height="50dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="104dp"
        android:layout_height="50dp"

        android:layout_marginLeft="75dp"
        android:text="Password"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:hint="Entrez votre Mot de passe">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_password"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="104dp"
        android:layout_height="50dp"

        android:layout_marginLeft="75dp"
        android:text="Email"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:hint="Entrez votre email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_email"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="104dp"
        android:layout_height="50dp"

        android:layout_marginLeft="75dp"
        android:text="Phone"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_phone"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:inputType="phone"
        android:hint="Entrez votre numéro de téléphone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_phone"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="104dp"
        android:layout_height="50dp"

        android:layout_marginLeft="75dp"
        android:text="Address"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_address"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:inputType="textPostalAddress"
        android:hint="Entrez votre adresse">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_address"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/text_view_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:text="Si vous avez déjà un  compte, "
        />

    <TextView
        android:id="@+id/text_view_se_connecter"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="5dp"
        android:text="se connecter"
        android:textColor="@color/jaune"
        android:clickable="true"
        />


    <Button
        android:id="@+id/button_inscription"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginLeft="130dp"
        android:backgroundTint="@color/gris"
        android:text="Inscription" />





</LinearLayout>